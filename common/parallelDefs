#CC = /afs/ece/project/seth_group/pakha/opencilk/opencilk-project/build/bin/clang++
CFLAGS = $(OPENCILKFLAGS) $(CCFLAGS)
LFLAGS = $(OPENCILKFLAGS) $(CLFLAGS) -fuse-ld=lld -L/afs/ece/project/seth_group/pakha/GCC-12.2.0/lib64

