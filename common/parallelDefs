ifeq (, $(shell which jemalloc-config))
JEMALLOC =
else
JEMALLOCLD = $(shell jemalloc-config --libdir)
JEMALLOC = -L$(JEMALLOCLD) -ljemalloc
endif

#CCFLAGS = -mcx16 -O3 -std=c++17 -DNDEBUG -I .
CCFLAGS = -mcx16 -O3 -std=c++17 -DNDEBUG -I .
CLFLAGS = -ldl $(JEMALLOC)

OMPFLAGS = -DPARLAY_OPENMP -fopenmp
CILKFLAGS = -DPARLAY_CILK -fcilkplus

#OPENCILKFLAGS = -DPARLAY_OPENCILK -fopencilk --opencilk-resource-dir=/home/sdp/opencilk/cheetah/build/
OPENCILKFLAGS = -DPARLAY_OPENCILK -fcilkplus -Xclang -fpfor-spawn-strategy=1  -mllvm -cilk-set-maxgrainsize=2048  -mllvm -disable-loop-idiom=false

UIPIFLAGS = -DPARLAY_OPENCILK -fforkd=uli -ftapir=serial -mllvm -lazy-poll-lowering=nop -mno-avx -Xclang -fpfor-spawn-strategy=1 -mllvm -disable-lazy-endisui=true -mllvm -lazy-enable-main-instrumentation=true -mllvm -lazy-set-maxgrainsize=16 -mllvm -disable-loop-idiom=true
POLL0FLAGS = -DPARLAY_OPENCILK -fforkd=lazy -ftapir=serial -mllvm -lazy-poll-lowering=unwind-ulifsim -Xclang -fpfor-spawn-strategy=2 -mllvm -lazy-enable-proper-polling=0 -mllvm -lazy-enable-main-instrumentation=true -mllvm -lazy-set-maxgrainsize=16 -mllvm -enable-poll-epoch=false -mllvm -disable-loop-idiom=false
#POLL0FLAGS = -DPARLAY_OPENCILK -fforkd=lazy -ftapir=serial -mllvm -lazy-poll-lowering=nop -Xclang -fpfor-spawn-strategy=2 -mllvm -lazy-enable-proper-polling=0 -mllvm -lazy-enable-main-instrumentation=true -mllvm -lazy-set-maxgrainsize=16 -mllvm -enable-poll-epoch=false -mllvm -lazy-disable-unwind-polling=true -mllvm -disable-loop-idiom=true
POLL2FLAGS = -DPARLAY_OPENCILK -fforkd=lazy -ftapir=serial -mllvm -lazy-poll-lowering=unwind-ulifsim -mllvm -lazy-enable-proper-polling=2 -mllvm -lazy-enable-main-instrumentation=true -mllvm -lazy-set-maxgrainsize=16 -mllvm -enable-poll-epoch=false -mllvm -disable-loop-idiom=true
EAGERFLAGS = -DPARLAY_OPENCILK -fforkd=eager -ftapir=serial -mllvm -lazy-poll-lowering=nop -mllvm -eager-enable-main-instrumentation=true -mllvm -eager-set-maxgrainsize=16 -mllvm -disable-loop-idiom=true
PBBFLAGS = -DHOMEGROWN -pthread

ifdef OPENMP
CC = g++
CFLAGS = $(OMPFLAGS) $(CCFLAGS)
LFLAGS = $(OMPFLAGS) $(CLFLAGS)

else ifdef CILK
CC = g++
CFLAGS = $(CILKFLAGS) $(CCFLAGS)
LFLAGS = $(CILKFLAGS) $(CLFLAGS)

else ifdef OPENCILK
#CC = /opt/opencilk/bin/clang++
#CC = /home/sdp/opencilk/opencilk-project/build/bin/clang++
CC = clang++
CFLAGS = $(OPENCILKFLAGS) $(CCFLAGS)
#LFLAGS = $(OPENCILKFLAGS) $(CLFLAGS)
LFLAGS = -fcilkplus $(CLFLAGS)

else ifdef UIPI
CC = clang++
CFLAGS =  $(UIPIFLAGS) $(CCFLAGS)
LFLAGS =  -fforkd=uli -ftapir=serial $(CLFLAGS) -fuse-ld=lld

else ifdef POLL0
CC = clang++
CFLAGS =  $(POLL0FLAGS) $(CCFLAGS)
LFLAGS =  -fforkd=lazy -ftapir=serial $(CLFLAGS) -fuse-ld=lld

else ifdef POLL2
CC = clang++
CFLAGS =  $(POLL2FLAGS) $(CCFLAGS)
LFLAGS =  -fforkd=lazy -ftapir=serial $(CLFLAGS) -fuse-ld=lld

else ifdef EAGER
CC = clang++
CFLAGS =  $(EAGERFLAGS) $(CCFLAGS)
LFLAGS =  -fforkd=eager -ftapir=serial $(CLFLAGS) -fuse-ld=lld


else
CC = g++
CFLAGS = $(PBBFLAGS) $(CCFLAGS)
LFLAGS = $(PBBFLAGS) $(CLFLAGS)
endif

